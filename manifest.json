{
	"manifest_version": 2,

	"name": "Загрузчик музыки из Вконтакте",
	"description": "Позволяет вам загрузить музыку из социальной сети Вконтакте.",
	"version": "2.0",

	"content_scripts": [{
		"matches": ["*://vk.com/*"],
		"js": ["vk_inject.js"],
		"css": ["vk_styles.css"]
	}],
    "browser_action": {
        "default_title": "LostTime",

        "default_popup": "popup.html"
    }
}
